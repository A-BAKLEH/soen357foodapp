<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="Hi, Arnold"
            android:textColor="#233D4D"
            android:textSize="34sp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to cook ?"
            android:textColor="#233D4D"
            android:textSize="25sp"
            android:translationX="20dp"
            android:translationY="60dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="362dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:background="#233D4D"
            android:translationX="20dp"
            android:translationY="140dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu for Dinner"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:translationX="40dp"
            android:translationY="160dp" />

        <TextView
            android:id="@+id/mealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Chicken Baked"
            android:textColor="#FEA82F"
            android:textSize="25dp"
            android:textStyle="bold"
            android:translationX="35dp"
            android:translationY="200dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:translationX="130dp"
            android:translationY="245dp"
            app:srcCompat="@drawable/dif_icon" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:translationX="45dp"
            android:translationY="245dp"
            app:srcCompat="@drawable/time_icon" />

        <TextView
            android:id="@+id/time1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="30min"
            android:textColor="#FEA82F"
            android:translationX="80dp"
            android:translationY="251dp" />

        <TextView
            android:id="@+id/diff1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Easy"
            android:textColor="#FEA82F"
            android:translationX="165dp"
            android:translationY="251dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Category"
            android:textColor="#233D4D"
            android:textSize="28sp"
            android:translationX="20dp"
            android:translationY="320dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="413dp"
            android:layout_height="444dp"
            android:translationY="420dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:backgroundTint="#FEA82F"
            android:text="Breakfast"
            android:textColor="#000000"
            android:textSize="10sp"
            android:translationX="10dp"
            android:translationY="370dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:backgroundTint="#FEA82F"
            android:text="Lunch"
            android:textColor="#000000"
            android:textSize="10sp"
            android:translationX="110dp"
            android:translationY="370dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:backgroundTint="#FEA82F"
            android:text="Dinner"
            android:textColor="#000000"
            android:textSize="10sp"
            android:translationX="210dp"
            android:translationY="370dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:backgroundTint="#FEA82F"
            android:text="Snack"
            android:textColor="#000000"
            android:textSize="10sp"
            android:translationX="310dp"
            android:translationY="370dp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/mealImg"
            android:layout_width="121dp"
            android:layout_height="116dp"
            android:translationX="240dp"
            android:translationY="160dp"
            app:srcCompat="@drawable/chicken" />

        <ImageView
            android:id="@+id/imageProf"
            android:layout_width="107dp"
            android:layout_height="94dp"
            android:layout_alignParentTop="true"
            android:translationX="280dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/userphoto" />

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/white"
        android:background="#233D4D"/>

</RelativeLayout>