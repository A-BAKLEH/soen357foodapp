<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MealPlanActivity" android:orientation="vertical">

    <TextView
            android:text="Meal Plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/mealPlanDateRecycler">

        </androidx.recyclerview.widget.RecyclerView>
    </TableRow>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/mealPlanDateTitle" />

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breakfast"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mealPlanBreakfastRecycler">

        </androidx.recyclerview.widget.RecyclerView>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunch"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mealPlanLunchRecycler">

        </androidx.recyclerview.widget.RecyclerView>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mealPlanDinnerRecycler">

        </androidx.recyclerview.widget.RecyclerView>
    </TableRow>

</LinearLayout>